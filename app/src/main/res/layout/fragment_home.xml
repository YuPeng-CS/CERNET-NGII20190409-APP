<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/home_heart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="心率"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_b_heart"
            android:drawableRight="@drawable/ic_b_zhe"
            android:background="@drawable/view_radius"
            android:padding="10dp"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/home_run"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="运动"
            android:textSize="20sp"
            android:drawableRight="@drawable/ic_b_tiao"
            android:drawableLeft="@drawable/ic_b_run"
            android:background="@drawable/view_radius"
            android:padding="10dp"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/home_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温度"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_b_temp"
            android:drawableRight="@drawable/ic_b_shan"
            android:background="@drawable/view_radius"
            android:padding="10dp"
            android:layout_margin="20dp"/>


    </LinearLayout>
</LinearLayout>
